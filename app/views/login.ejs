    <body>  
        <div class="container login-container">
            <div class="h-100 row align-items-start">
                <div class="col-md-4"></div>
                    <div class="col-md-4 login-form-1">
                        <h3>Login for Form 1</h3>
                            <form action="/autenticar" method="POST">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="user" name="user" value="<%= dadosForm.user%>" placeholder="Your Email *" value="" />
                                </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="password" name="password" value="<%= dadosForm.password%>" placeholder="Your Password *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btnSubmit" value="Login" />
                                    </div>
                                    <div class="form-group">
                                        <a href="#" class="ForgetPwd">Forget Password?</a>
                                    </div>
                            </form>
                    </div>
                <div class="col-md-4"></div>    
            </div>      
        </div>
    </body>
